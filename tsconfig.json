{
  "compilerOptions": {
    "outDir": "./starter/dist",
    "rootDir": "./starter",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./starter/**/*.ts"],
  "exclude": ["./node_modules", "./starter/dist"]
}